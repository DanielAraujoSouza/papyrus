<%- contentFor('style') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/home.css" />

<%- contentFor('main') %>
<div class="content-wrapper">
  <div class="content">
    <div class="title">
      <h2>Seja Bem-Vindo(a)!</h2>
      <h3>
        Diversas informações sobre livros e autores.<br />
        Explore!
      </h3>
    </div>
    <div class="search">
      <div class="s-bar">
        <form id="search" action="/search" method="get">
          <input
            type="text"
            id="title"
            name="q"
            placeholder="O que você procura?"
          />
          <input type="submit" value="Pesquisar" />
        </form>
      </div>
      <span>
        Exemplo:
        <a href="/title/search?title=Batman">Batman</a>,
        <a href="/title/search?title=La%20casa%20de%20papel">La casa de papel</a>,
        <a href="/title/search?title=Dragon%20Ball">Dragon Ball</a>
      </span>
    </div>
  </div>
</div>

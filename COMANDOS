# WEBUI SERVICE
cd /home/system/Documentos/GitHub/papyrus/web-ui-service/ && npm run devstart

# Erro Limite
echo fs.inotify.max_user_watches=524288 | sudo tee -a /etc/sysctl.conf && sudo sysctl -p


